<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- AutoCompleteTextView for searching recipes -->
    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for a recipe"
        android:inputType="text"
        android:textSize="18sp"
        android:padding="10dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:completionThreshold="1"
        android:background="@android:drawable/edit_text" />

    <!-- Button for voice search -->
    <Button
        android:id="@+id/voicebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voice Search"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <!-- TextView to display the recipe details -->
    <TextView
        android:id="@+id/recipeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipe details will appear here"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#333333"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp" />

    <!-- Back button to return to the previous activity -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

</LinearLayout>